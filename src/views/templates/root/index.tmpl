{% extends 'framework/base.tmpl' %}

{% block title%}Hauptseite{% endblock %}

{% block content%}
    <p><a href="user/list">Benutzerliste</a></p>
    <p><a href="user/create">Benutzer anlegen</a></p>
    <p>Gruppe anlegen</p>
    {% if user is none %}
    <div id="login">
        <form action="login" method="post">
            Benutzername: <input type="text" name="user"/> <br />
            Passwort: <input type="password" name="password"/> <br />
            <input type="submit" value="Login" />
        </form>
    </div>
    {% else %}
    <div id="lists">
        <h3>{{ user.username }}</h3>
        <h3>Charaktere <a href="/character/create">(+)</a></h3>
        <table class="list">
            <tr>
                <th>Charakter</th>
                <th>Gruppe</th>
            </tr>
            {% for character in user.characters %}
            <tr>
                <td>
                    {{ character.name }}
                </td>
            </tr>
            {% endfor %}
        </table>
        <h3>Gruppen <a href="/group/create">(+)</a></h3>
        <table class="list">
            <tr>
                <th>Gruppe</th>
                <th>Charaktere</th>
            </tr>
            {% for group in user.groups %}
                <tr>
                    <td>{{ group.group.name }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
    {% endif %}
{% endblock %}