{% extends 'framework/base.tmpl' %}

{% block title%}Charakterdaten ändern{% endblock %}

{% block content%}
<!-- TODO: Divs als Tabelle darstellen -->
<!-- TODO: Form fest um das DIV herum und dann einfach nur noch füllen ? -->
<table id="headers">
    <tr>
        <th class="title">Bezeichnung</th>
        <th class="description">Beschreibung</th>
        <!-- TODO: Bei Reihenfolge und Standard uU einen Hint und verkürzen -->
        <th class="order">Reihenfolge</th>
        <!-- TODO: Standard als Symbole, nicht als True/False -->
        <th class="standard">Standard</th>
        <th class="buttons"></th>
    </tr>
{% for header in headers %}
    <tr id="{{header.id}}" class="editable head_value">
        <td class="title">{{header.title}}</td>
        <td class="description">{{header.description}}</td>
        <td class="order">{{header.order}}</td>
        <td class="standard">{% if header.standard %}&check;{% else %}x{% endif %}</td>
        <td class="buttons"></td>
    </tr>
{% endfor %}
</table>
<!-- TODO: Bild suchen -->
<a href="javascript:void(0)" id="new_head">(+)</a>

<script type="text/javascript" src="/static/js/management.js"></script>
{% endblock %}
